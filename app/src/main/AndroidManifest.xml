<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wordgame.wordgame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo512"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo512"
        android:supportsRtl="true"
        android:theme="@style/Theme.WordGame">
        <activity
            android:name="com.wordgame.wordgame.InfoPage"
            android:exported="false" />
        <!-- Splash screen activity -->
        <activity
            android:name="com.wordgame.wordgame.Start"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Main activity -->
        <activity
            android:name="com.wordgame.wordgame.MainActivity"
            android:exported="true" />
    </application>

</manifest>